rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para a coleção 'historico_copiloto'
    match /historico_copiloto/{document=**} {
      
      // Permitir leitura: O usuário autenticado só pode ler se o campo 'usuario_id' do documento for igual ao seu ID.
      // OU se ele estiver tentando ler (list) e filtrando por 'usuario_id' igual ao seu ID.
      allow read: if request.auth != null && resource.data.usuario_id == request.auth.uid;
      
      // Permitir criação: O usuário autenticado só pode criar se definir seu próprio ID no campo 'usuario_id'.
      allow create: if request.auth != null && request.resource.data.usuario_id == request.auth.uid;
      
      // Permitir atualização/exclusão: Apenas pelo dono do documento.
      allow update, delete: if request.auth != null && resource.data.usuario_id == request.auth.uid;
    }

    // Regras para a coleção 'chats' (Novo sistema de chat)
    match /chats/{chatId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      match /messages/{messageId} {
        // Verifica se o chat pai pertence ao usuário
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.userId == request.auth.uid;
      }
    }
    
    // Bloquear todo o restante por padrão para segurança
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
